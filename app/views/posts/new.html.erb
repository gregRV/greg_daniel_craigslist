<h1>Create a new Post</h1>

<%= form_for([@category, @post]) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => "Your title here" %>
  <%= f.label :description %>
  <%= f.text_field :description, :placeholder => "Description here" %>
  <%= f.label :price %>
  <%= f.text_field :price, :placeholder => "Price here" %>
  <%= f.submit "Create Post!" %>
<% end %>
